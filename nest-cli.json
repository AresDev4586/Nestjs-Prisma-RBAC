{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@tasks/*": ["src/modules/tasks/*"],
      "@users/*": ["src/modules/users/*"],
      "@prisma/*": ["src/prisma/*"]
    }
  }
}
